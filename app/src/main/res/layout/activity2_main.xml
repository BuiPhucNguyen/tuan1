<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:hapticFeedbackEnabled="false">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lock"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGET\nPASSWORD"
        android:textAlignment="center"
        android:textColor="#0B0B0B"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:text="Provide your account's email for which you want to reset your password"
        android:textAlignment="center"
        android:textColor="#0B0B0B"
        android:textColorHint="#00B7C625"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="361dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="326dp"
        android:layout_height="46dp"
        android:background="#D3C6C6"
        android:drawableLeft="@drawable/mail_2935365_1"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        android:textColor="#000000"
        android:textColorHighlight="#5E3E3E"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="455dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="564dp">

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="326dp"
        android:layout_height="53dp"
        android:text="NEXT"
        android:textColor="#090909"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#E8D424"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="564dp" />

</androidx.constraintlayout.widget.ConstraintLayout>